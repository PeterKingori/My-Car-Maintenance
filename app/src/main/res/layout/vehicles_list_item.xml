<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vehicle_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="0dp"
                android:paddingStart="12dp"
                android:paddingTop="0dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:textAppearance="?attr/textAppearanceHeadline5"
                app:drawableTopCompat="@drawable/generic_car"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Swift" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vehicle_model" />

            <TextView
                android:id="@+id/vehicle_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:drawableTopCompat="@drawable/ic_baseline_manufacturer_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/vehicle_license"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vehicle_model"
                tools:text="Suzuki" />

            <TextView
                android:id="@+id/vehicle_license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:drawableTopCompat="@drawable/ic_baseline_license_24"
                app:layout_constraintBottom_toBottomOf="@+id/vehicle_manufacturer"
                app:layout_constraintEnd_toStartOf="@+id/vehicle_odometer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/vehicle_manufacturer"
                app:layout_constraintTop_toTopOf="@+id/vehicle_manufacturer"
                tools:text="KAA 123A" />

            <TextView
                android:id="@+id/vehicle_odometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:drawableTopCompat="@drawable/ic_baseline_mileage_24"
                app:layout_constraintBottom_toBottomOf="@+id/vehicle_license"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/vehicle_license"
                app:layout_constraintTop_toTopOf="@+id/vehicle_license"
                tools:text="65000" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>