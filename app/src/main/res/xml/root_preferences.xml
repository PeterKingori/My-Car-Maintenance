<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/units_header">

        <ListPreference
            app:entries="@array/distance_entries"
            app:entryValues="@array/distance_values"
            app:key="distance"
            app:title="@string/distance_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/currency_entries"
            app:entryValues="@array/currency_values"
            app:key="currency"
            app:title="@string/currency_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>